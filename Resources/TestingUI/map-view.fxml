                        <Button mnemonicParsing="false" onAction="#removeFortificationButton" onMouseClicked="#removeArmiesButton" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: #2D3339;" text="-" textFill="WHITE" />
